<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:columnCount="4"
    android:rowCount="4">

    <Button
        android:id="@+id/deleteAll"
        style="@style/FunctionalButtons"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="0"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:onClick="definePattern"
        android:tag="deleteAll"
        android:text="C" />

    <Button
        android:id="@+id/deleteDigit"
        style="@style/FunctionalButtons"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="0"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:onClick="definePattern"
        android:tag="deleteDigit"
        android:text="X" />

    <Button
        android:id="@+id/changeMeasureUnit"
        style="@style/FunctionalButtons"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="0"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:onClick="definePattern"
        android:tag="changeMeasureUnit"
        android:text="S" />

    <Button
        android:id="@+id/split"
        style="@style/FunctionalButtons"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="0"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:onClick="definePattern"
        android:tag="split"
        android:text="1X" />

    <Button
        android:id="@+id/one"
        style="@style/FunctionalButtons"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="0"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:onClick="definePattern"
        android:tag="one"
        android:text="1" />

    <Button
        android:id="@+id/two"
        style="@style/FunctionalButtons"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_columnWeight="0"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:onClick="definePattern"
        android:tag="two"
        android:text="2" />

    <Button
        android:id="@+id/three"
        style="@style/FunctionalButtons"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="3"
        android:layout_columnWeight="0"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:onClick="definePattern"
        android:tag="three"
        android:text="3" />

    <Button
        android:id="@+id/four"
        style="@style/FunctionalButtons"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="0"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:onClick="definePattern"
        android:tag="four"
        android:text="4" />

    <Button
        android:id="@+id/five"
        style="@style/FunctionalButtons"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_columnWeight="0"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:onClick="definePattern"
        android:tag="five"
        android:text="5" />

    <Button
        android:id="@+id/six"
        style="@style/FunctionalButtons"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="3"
        android:layout_columnWeight="0"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:onClick="definePattern"
        android:tag="six"
        android:text="6" />

    <Button
        android:id="@+id/seven"
        style="@style/FunctionalButtons"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="0"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:onClick="definePattern"
        android:tag="seven"
        android:text="7" />

    <Button
        android:id="@+id/eight"
        style="@style/FunctionalButtons"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_columnWeight="0"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:onClick="definePattern"
        android:tag="eight"
        android:text="8" />

    <Button
        android:id="@+id/nine"
        style="@style/FunctionalButtons"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_column="3"
        android:layout_columnWeight="0"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:onClick="definePattern"
        android:tag="nine"
        android:text="9" />

    <Button
        android:id="@+id/zero"
        style="@style/FunctionalButtons"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_columnWeight="0"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:onClick="definePattern"
        android:tag="zero"
        android:text="0" />

    <Button
        android:id="@+id/back"
        style="@style/FunctionalButtons"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="0"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:onClick="definePattern"
        android:tag="back"
        android:text="←" />

    <Button
        android:id="@+id/ahead"
        style="@style/FunctionalButtons"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_column="3"
        android:layout_columnWeight="0"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:onClick="definePattern"
        android:tag="ahead"
        android:text="→" />

</GridLayout>